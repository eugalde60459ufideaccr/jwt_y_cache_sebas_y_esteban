@model Proyecto_CreandoRecuerdos.Models.PedidoPagoCompletoModel

@section Styles {
    <link href="@Url.Content("~/Templates/css/botones.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Templates/css/validaciones.css")" rel="stylesheet" />
}

<div class="pago-container">
    <div id="errorPago" class="alert alert-danger d-none"></div>

    <div class="row">
        <div class="col-md-6">
            <h4><i class="fas fa-receipt me-2"></i> Resumen del Pedido</h4>
            <div class="resumen-pedido">
                @foreach (var producto in Model.Productos)
                {
                    <div class="item-pedido">
                        <div class="nombre-producto">@producto.Nombre x @producto.Cantidad</div>
                        <div class="precio-producto">₡@((producto.PrecioUnitario * producto.Cantidad).ToString("N2"))</div>
                        <div class="notas-producto @(string.IsNullOrEmpty(producto.Personalizacion) ? "d-none" : "")">
                            <small><strong>Notas:</strong> @producto.Personalizacion</small>
                        </div>
                    </div>
                }
            </div>

            <div class="totales-pedido">
                <div class="total-linea">
                    <span>Subtotal:</span>
                    <span class="valor">₡@Model.Subtotal.ToString("N2")</span>
                </div>
                <div class="total-linea">
                    <span>Impuestos (13%):</span>
                    <span class="valor">₡@Model.Impuestos.ToString("N2")</span>
                </div>
                <div class="total-linea total">
                    <span>Total:</span>
                    <span class="valor">₡@Model.Total.ToString("N2")</span>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <h4><i class="fas fa-credit-card me-2"></i> Método de Pago</h4>

            <ul class="nav nav-tabs" id="metodosPagoTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="efectivo-tab" data-bs-toggle="tab"
                            data-bs-target="#efectivo" type="button" role="tab">
                        <i class="fas fa-money-bill-wave me-1"></i> Efectivo
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="sinpe-tab" data-bs-toggle="tab"
                            data-bs-target="#sinpe" type="button" role="tab">
                        <i class="fas fa-mobile-alt me-1"></i> SINPE
                    </button>
                </li>
            </ul>

            <div class="tab-content p-3 border border-top-0 rounded-bottom" id="metodosPagoTabContent">
                <!-- Efectivo -->
                <div class="tab-pane fade show active" id="efectivo" role="tabpanel">
                    <div class="alert alert-info mb-3">
                        <i class="fas fa-info-circle me-2"></i>
                        Por favor traiga el monto exacto o prepare su cambio.
                    </div>
                </div>

                <!-- SINPE -->
                <div class="tab-pane fade" id="sinpe" role="tabpanel">
                    <div class="mb-3">
                        <label for="telefonoSinpe" class="form-label">Teléfono SINPE Móvil *</label>
                        <input type="text" class="form-control" id="telefonoSinpe"
                               maxlength="8" required pattern="[0-9]{8}"
                               placeholder="88888888">
                        <small class="text-muted">Ingrese el número de teléfono registrado en SINPE Móvil que realizará el pago</small>
                        <div class="invalid-feedback">Por favor ingrese un número de teléfono válido (8 dígitos)</div>
                    </div>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Debe realizar el pago por SINPE Móvil al número <strong>8888-8888</strong> con el monto exacto de <strong>₡@Model.Total.ToString("N2")</strong>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="@Url.Action("Pedidos")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Volver al Menú
                </a>
                <button type="button" class="btn btn-primary" id="confirmarPago">
                    <i class="fas fa-check me-2"></i> Confirmar Pago
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("~/Templates/js/validaciones.js")"></script>
    <script>
        // Función para calcular el cambio en efectivo
        function calcularCambio(total) {
            const montoRecibido = parseFloat(document.getElementById('montoRecibido').value) || 0;
            const cambio = montoRecibido - total;
            const cambioElement = document.getElementById('cambio');

            if (montoRecibido > 0) {
                if (cambio >= 0) {
                    cambioElement.value = `₡${cambio.toFixed(2)}`;
                    cambioElement.style.color = 'green';
                } else {
                    cambioElement.value = `Faltan ₡${Math.abs(cambio).toFixed(2)}`;
                    cambioElement.style.color = 'red';
                }
            } else {
                cambioElement.value = '₡0.00';
                cambioElement.style.color = 'inherit';
            }
        }

         //Validación de teléfono SINPE
        function validarTelefonoSinpe(telefono) {
            return /^\d{8}$/.test(telefono);
        }

        document.getElementById('telefonoSinpe').addEventListener('input', function (e) {
            const valido = validarTelefonoSinpe(e.target.value);
            e.target.classList.toggle('is-invalid', !valido);
            e.target.classList.toggle('is-valid', valido);
        });

        // Botón confirmar pago
        document.getElementById('confirmarPago').addEventListener('click', function () {
            const metodoPago = document.querySelector('#metodosPagoTab .nav-link.active').id.replace('-tab', '');
            const pagoData = {
                MetodoPago: metodoPago,
                TelefonoSinpe: document.getElementById('telefonoSinpe')?.value,
            };

            let valido = true;
            let mensajeError = '';

            switch (metodoPago) {
                case 'efectivo':
                    break;

                case 'sinpe':
                    if (!validarTelefonoSinpe(pagoData.TelefonoSinpe)) {
                        valido = false;
                        mensajeError = 'Teléfono SINPE inválido (debe tener 8 dígitos)';
                    }
                    break;
            }

            if (!valido) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error en el pago',
                    text: mensajeError
                });
                return;
            }

            const btn = this;
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Procesando...';
            btn.disabled = true;

            fetch('/Pedidos/ProcesarPago', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(pagoData)
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = data.redirectUrl;
                    } else {
                        throw new Error(data.message || 'Error al procesar el pago');
                    }
                })
                .catch(error => {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error en el pago',
                        text: error.message,
                    });
                })
                .finally(() => {
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                });
        });
    </script>
}
