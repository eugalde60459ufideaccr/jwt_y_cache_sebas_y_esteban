@model Proyecto_CreandoRecuerdos.Models.UsuarioModel

@{
    ViewData["Title"] = "Registro de Usuarios";
    var errorMessage = TempData["ErrorMessage"] as string;
    var successMessage = TempData["SuccessMessage"] as string;
}

@section Styles {
    <link href="@Url.Content("~/Templates/css/selects.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Templates/css/botones.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Templates/css/validaciones.css")" rel="stylesheet" />
    <style>

        .container {
            width: 100%;
            padding: 0;
            margin: 0 auto;
        }

        .row {
            width: 100%;
            margin: 0;
            display: flex;
            justify-content: center;
        }

        .col-md-8, .col-lg-6 {
            float: none;
            margin: 0 auto;
            display: flex;
            justify-content: center;
        }

        .form-container {
            display: none;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.4s ease-out;
        }

        .active-form {
            display: block;
            opacity: 1;
            transform: translateY(0);
        }

        .card {
            margin-left: auto;
            margin-right: auto;
            max-width: 400px;
            width: 100%;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(226, 122, 176, 0.15);
            overflow: hidden;
            background: #FFF0F5;
            border: 1px solid rgba(226, 122, 176, 0.2);
        }

        .switch-label {
            min-width: 120px;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .form-header {
            position: relative;
            padding-bottom: 1.5rem;
            margin-bottom: 1.5rem;
        }

            .form-header:after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 3px;
                background: #B54885;
                border-radius: 10px;
            }

        .form-control {
            border: 1px solid rgba(226, 122, 176, 0.3);
            border-radius: 8px;
            padding: 12px 15px;
            transition: all 0.3s ease;
            background-color: rgba(255, 255, 255, 0.7);
        }

            .form-control:focus {
                border-color: #B54885;
                box-shadow: 0 0 0 3px rgba(226, 122, 176, 0.2);
            }

        .submit-btn {
            background: #B54885;
            border: none;
            border-radius: 30px;
            padding: 12px 0;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(226, 122, 176, 0.3);
        }

            .submit-btn:hover {
                background: #A04077;
                transform: translateY(-3px);
                box-shadow: 0 6px 15px rgba(226, 122, 176, 0.4);
            }

        .form-footer {
            position: relative;
            padding-top: 1.5rem;
            margin-top: 1.5rem;
        }

            .form-footer:before {
                content: '';
                position: absolute;
                top: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 3px;
                background: #B54885;
                border-radius: 10px;
            }

        .alert {
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
            padding: 15px 20px;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
        }

        .alert-danger {
            background-color: #FFEBEE;
            border-left: 4px solid #F44336;
            color: #d32f2f;
        }

        .alert-success {
            background-color: #E8F5E9;
            border-left: 4px solid #4CAF50;
            color: #2e7d32;
        }

        .btn-close {
            margin-left: auto;
            cursor: pointer;
        }
    </style>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">

                    <!-- Agrega este div para mostrar mensajes -->
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="position: fixed; top: 20px; right: 20px; z-index: 1000; max-width: 400px;">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @errorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert" style="position: fixed; top: 20px; right: 20px; z-index: 1000; max-width: 400px;">
                            <i class="fas fa-check-circle me-2"></i>
                            @successMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }


                    <!-- Switch -->
                    <div class="d-flex justify-content-center mb-4">
                        <div class="btn-group" role="group">
                            <input type="radio" class="btn-check" name="formSwitch" id="loginSwitch" autocomplete="off" checked>
                            <label class="btn btn-outline-dark-pink switch-label active" for="loginSwitch">Iniciar<br>Sesión</label>

                            <input type="radio" class="btn-check" name="formSwitch" id="registerSwitch" autocomplete="off">
                            <label class="btn btn-outline-dark-pink switch-label" for="registerSwitch">Registrarse</label>
                        </div>
                    </div>
                    <!-- Formulario de iniciar sesión -->
                    @using (Html.BeginForm("iniciar_sesion", "Registro_Usuarios", FormMethod.Post, new { @id = "loginForm", @class = "form-container active-form" }))
                    {
                        <div class="form-header">
                            <h2 class="text-center" style="font-family: 'Sono', sans-serif; color: #B54885;">Bienvenid❀ de nuevo</h2>
                            <p class="text-center mb-0">Ingresa a tu cuenta para continuar</p>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Correo Electrónico</label>
                            @Html.TextBoxFor(x => x.correo, new { @class = "form-control", @id = "login-username", @placeholder = "correo@ejemplo.com", @type = "email", @required = "true" })
                            @Html.ValidationMessageFor(x => x.correo, "", new { @class = "text-danger" })
                            <span class="invalid-feedback"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Contraseña</label>
                            @Html.TextBoxFor(x => x.contrasenna, new { @class = "form-control", @type = "password", @id = "Password", @placeholder = "**********", @required = "true" })
                            @Html.ValidationMessageFor(x => x.contrasenna, "", new { @class = "text-danger" })
                            <span class="invalid-feedback"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn submit-btn text-white w-100">Ingresar</button>
                        </div>

                        <div class="form-footer text-center">
                            <p class="mb-0"><a href="@Url.Action("recuperar_contrasenna", "Registro_Usuarios")" class="text-decoration-none" style="color: #B54885;">¿Olvidaste tu contraseña?</a></p>
                        </div>
                    }

                    <!-- Formulario de Registro -->
                    @using (Html.BeginForm("crear_cuenta", "Registro_Usuarios", FormMethod.Post, new { @id = "registerForm", @class = "form-container" }))
                    {
                        <div class="form-header">
                            <h2 class="text-center" style="font-family: 'Sono', sans-serif; color: #B54885;">Únete a nuestra comunidad</h2>
                            <p class="text-center mb-0">Crea tu cuenta para disfrutar de todas las ventajas</p>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Nombre</label>
                            @Html.TextBoxFor(x => x.nombre, new { @class = "form-control", @placeholder = "Tu nombre completo", @required = "true" })
                            @Html.ValidationMessageFor(x => x.nombre, "", new { @class = "text-danger" })
                            <span class="invalid-feedback"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Correo Electrónico</label>
                            @Html.TextBoxFor(x => x.correo, new { @class = "form-control", @type = "email", @placeholder = "correo@ejemplo.com", @required = "true" })
                            @Html.ValidationMessageFor(x => x.correo, "", new { @class = "text-danger" })
                            <span class="invalid-feedback"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Contraseña</label>
                            @Html.Password("password", null, new { @class = "form-control", @id = "password", @placeholder = "Mínimo 8 caracteres", @required = "true" })
                            <span class="invalid-feedback"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Confirmar Contraseña</label>
                            @Html.TextBoxFor(x => x.contrasenna, new { @class = "form-control", @type = "password", @id = "confirmPassword", @placeholder = "Repetir cotraseña", @required = "true" })
                            @Html.ValidationMessageFor(x => x.contrasenna, "", new { @class = "text-danger" })
                            <span class="invalid-feedback"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn submit-btn text-white w-100">Crear Cuenta</button>
                        </div>

                        <div class="form-footer text-center">
                            <p class="mb-0">
                                Al registrarte, aceptas nuestros
                                <a href="#" class="text-decoration-none" style="color: #B54885;">Términos</a> y
                                <a href="#" class="text-decoration-none" style="color: #B54885;">Privacidad</a>
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("~/Templates/js/validaciones.js")"></script>
    <script src="@Url.Content("~/Templates/js/registrar_usuario.js")"></script>
}
