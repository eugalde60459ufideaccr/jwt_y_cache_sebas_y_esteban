@model List<Proyecto_CreandoRecuerdos.Models.EmpleadoModel>
@{
    ViewData["Title"] = "Gestión de Empleados";
}

@section Styles {
    <link href="@Url.Content("~/Templates/css/menu.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Templates/css/botones.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Templates/css/validaciones.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Templates/css/tablas.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Templates/css/paginaciones_y_exportaciones.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Templates/css/selects.css")" rel="stylesheet" />

    <style>
        .nav-tabs .nav-link {
            color: #B54885;
            border: 1px solid #B54885;
            font-weight: 500;
            background-color: #FFF8F9;
        }

            .nav-tabs .nav-link.active {
                background-color: #B54885;
                color: #FFFFFF;
                border-color: #FFF8F9;
            }
    </style>
}

<div class="container my-5 text-center">
    <h2 class="mb-4" style="font-family: 'Sono', sans-serif;">
        <i class="fas fa-user-cog me-2"></i> Gestión de Empleados
    </h2>

    <!-- Tabs superiores -->
    <ul class="nav nav-tabs mb-4 justify-content-center">
        <li class="nav-item">
            <a class="nav-link active" href="#">Empleados</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Horarios", "Horarios")">Horarios</a>
        </li>
    </ul>

    <!-- Formulario -->
    <div class="card mb-4">
        <div class="card-body">
            <form id="formEmpleado" class="needs-validation" novalidate>
                <input type="hidden" id="id_usuario" name="id_usuario" value="0">

                <div class="row mb-3">
                    <div class="col-md-6 mb-3 text-start form-group">
                        <label for="nombre" class="form-label fw-bold">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required maxlength="100">
                        <span class="invalid-feedback"></span>
                    </div>

                    <div class="col-md-6 mb-3 text-start form-group">
                        <label for="correo" class="form-label fw-bold">Correo electrónico</label>
                        <input type="email" class="form-control" id="correo" name="correo" required maxlength="100">
                        <span class="invalid-feedback"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6 mb-3 text-start form-group">
                        <label for="contrasenna" class="form-label fw-bold">Contraseña</label>
                        <input type="password" class="form-control" id="contrasenna" name="contrasenna" minlength="8" maxlength="100">
                        <small class="text-muted">Mínimo 8 caracteres.</small>
                        <span class="invalid-feedback"></span>
                    </div>

                    <div class="col-md-3 mb-3 text-start form-group">
                        <label for="idRol" class="form-label fw-bold">Rol</label>
                        <select class="form-select" id="idRol" name="idRol" required>
                            <option value="" selected disabled>Seleccione un rol</option>
                            <option value="1">Administrador</option>
                            <option value="2">Trabajador</option>
                        </select>
                        <span class="invalid-feedback"></span>
                    </div>

                    <div class="col-md-3 mb-3 text-start form-group">
                        <label for="activo" class="form-label fw-bold">Estado</label>
                        <select class="form-select" id="activo" name="activo" required>
                            <option value="" selected disabled>Seleccione estado</option>
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                        <span class="invalid-feedback"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button type="reset" class="btn btn-danger" id="btnCancelar">Cancelar</button>
                    <button type="submit" class="btn btn-custom-pink" id="btnGuardar">Guardar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de empleados -->
    <div class="table-responsive">
        <table class="table mb-0 table-bordered table-striped tabla-global text-center dataTable" data-page-length="1">
            <thead class="tabla-global">
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Rol</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="tabla-global">
                @foreach (var empleado in Model)
                {
                    <tr>
                        <td>@empleado.nombre</td>
                        <td>@empleado.correo</td>
                        <td>@(empleado.idRol == 1 ? "Administrador" : "Trabajador")</td>
                        <td>
                            <span class="badge @(empleado.activo ? "bg-success" : "bg-secondary")">
                                @(empleado.activo ? "Activo" : "Inactivo")
                            </span>
                        </td>
                        <td>
                            <button class="btn btn-custom-pink btn-sm btn-editar" title="Editar" data-id="@empleado.id_usuario">
                                <i class="fas fa-pencil"></i>
                            </button>
                            <button class="btn btn-danger btn-sm btn-eliminar" title="Eliminar" data-id="@empleado.id_usuario">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js" defer></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js" defer></script>
    <script src="@Url.Content("~/Templates/js/paginaciones_y_exportaciones.js")" defer></script>
    <script src="@Url.Content("~/Templates/js/selects.js")" defer></script>
    <script src="@Url.Content("~/Templates/js/validaciones.js")"></script>
    <script src="@Url.Content("~/Templates/js/empleados.js")" defer></script>
}
