@section Styles {
    <link href="@Url.Content("~/Templates/css/home.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Templates/css/botones.css")" rel="stylesheet" />
}

    <div class="hero-section">
        <div class="floral-decoration floral-top-left"></div>
        <div class="floral-decoration floral-bottom-right"></div>
        <div class="container text-center py-5">
            <div class="logo-container">
                <img src="@Url.Content("~/Templates/img/Recuerdos.png")"
                     alt="Creando Recuerdos" 
                     class="img-fluid" 
                     fetchpriority="high" 
                     width="220" 
                     height="140" 
                     decoding="async" 
                     loading="eager"
                />
            </div>
            <h1 class="display-5 fw-light mb-4" style="color: #2C2C2C; font-family: 'Sono', sans-serif;">
                Creando Recuerdos Inolvidables
            </h1>
            <p class="lead mx-auto" style="max-width: 600px; color: #2C2C2C; font-family: 'Sono', sans-serif;">
                Delicias artesanales hechas con amor y los mejores ingredientes
            </p>
        </div>
    </div>

    <div class="features-section">
        <div class="container">
            <h2 class="text-center mb-5" style="font-family: 'Sono', sans-serif;">
                <i class="fas fa-star me-2 dark-pink"></i>Accesos Rápidos
            </h2>
            <div class="row g-4">
                <!-- Card 1 -->
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-bread-slice fa-3x mb-3 dark-pink"></i>
                            <h3 class="card-title" style="font-family: 'Sono', sans-serif;">Menú</h3>
                            <p class="card-text">Consulta todos los productos disponibles en nuestro menú.</p>
                            <a  href="@Url.Action("Menu", "menu")" class="btn btn-outline-dark-pink mt-2">Ir al Menú</a>
                        </div>
                    </div>
                </div>

                <!-- Card 2 -->
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-shopping-basket fa-3x mb-3 dark-pink"></i>
                            <h3 class="card-title" style="font-family: 'Sono', sans-serif;">Pedidos</h3>
                            <p class="card-text">Realiza tus pedidos en línea.</p>
                            <a href="@Url.Action("Pedidos", "Pedidos")" class="btn btn-outline-dark-pink mt-2">Pedir</a>
                        </div>
                    </div>
                </div>

                <!-- Card 3 -->
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-user-plus fa-3x mb-3 dark-pink"></i>
                            <h3 class="card-title" style="font-family: 'Sono', sans-serif;">Registro</h3>
                            <p class="card-text">Conviértete en nuestro cliente al registrarte en nuestra página.</p>
                            <a href="@Url.Action("iniciar_sesion", "Registro_Usuarios")" class="btn btn-outline-dark-pink mt-2">Registrarme</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
