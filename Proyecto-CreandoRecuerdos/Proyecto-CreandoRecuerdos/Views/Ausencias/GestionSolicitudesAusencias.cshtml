
@model IEnumerable<Proyecto_CreandoRecuerdos.base_de_datos.tabla_solicitudes_ausencias>

@{
    ViewData["Title"] = "Gestión de Solicitudes de Ausencias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="@Url.Content("~/Templates/css/tablas.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Templates/css/paginaciones_y_exportaciones.css")" rel="stylesheet" />  
}

<div class="my-5 text-center">
    <h2 class="mb-4" style="font-family: 'Sono', sans-serif;">
        <i class="fas fa-user-cog me-2"></i> Gestión de Solicitudes de Ausencias
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <table class="table mb-0 table-bordered table-striped tabla-global text-center dataTable con-exportaciones" data-page-length="10">
        <thead class="tabla-global">
            <tr>
                <th>Empleado (ID)</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Tipo</th>
                <th>Motivo</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id_usuario</td>
                    <td>@item.fecha_inicio.ToShortDateString()</td>
                    <td>@item.fecha_fin.ToShortDateString()</td>
                    <td>@item.tipo</td>
                    <td>@item.motivo</td>
                    <td>@item.estado</td>
                    <td>
                        @if (item.estado == "Pendiente")
                        {
                            using (Html.BeginForm("Aprobar", "Ausencias", new { id = item.id_solicitud }, FormMethod.Post, new { style = "display:inline;" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success btn-sm">Aprobar</button>
                            }
                            using (Html.BeginForm("Rechazar", "Ausencias", new { id = item.id_solicitud }, FormMethod.Post, new { style = "display:inline;" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm">Rechazar</button>
                            }
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js" defer></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js" defer></script>
    <script src="@Url.Content("~/Templates/js/paginaciones_y_exportaciones.js")" defer></script>
}