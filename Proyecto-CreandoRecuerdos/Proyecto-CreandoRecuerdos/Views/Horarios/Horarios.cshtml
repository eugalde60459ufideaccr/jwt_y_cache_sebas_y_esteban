@model List<Proyecto_CreandoRecuerdos.base_de_datos.tabla_horarios>
@{
    ViewData["Title"] = "Gestión de Horarios";
}

@section Styles {
    <link href="@Url.Content("~/Templates/css/tablas.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Templates/css/validaciones.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Templates/css/botones.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Templates/css/paginaciones_y_exportaciones.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Templates/css/selects.css")" rel="stylesheet" />
    <style>
        .nav-tabs .nav-link {
            color: #B54885;
            border: 1px solid #B54885;
            font-weight: 500;
            background-color: #FFF8F9;
        }

            .nav-tabs .nav-link.active {
                background-color: #B54885;
                color: #FFFFFF;
                border-color: #FFF8F9;
            }

        /* Estilos para el checkbox de suministros utilizados */

        .custom-checkbox {
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .custom-checkbox input[type="checkbox"] {
                display: none;
            }

            .custom-checkbox span {
                position: relative;
                display: inline-block;
                width: 20px;
                height: 20px;
                vertical-align: middle;
            }

                .custom-checkbox span::before {
                    content: "";
                    position: absolute;
                    width: 100%;
                    height: 100%;
                    left: 0;
                    top: 0;
                    border: 1px solid #CED4DA;
                    border-radius: 4px;
                    box-sizing: border-box;
                    background-color: #FFFFFF;
                }

            .custom-checkbox input[type="checkbox"]:checked + span::before {
                border-color: #B54885;
                background-color: #B54885;
            }

            .custom-checkbox span:after {
                content: "";
                position: absolute;
                left: 5px;
                top: 2px;
                width: 8px;
                height: 14px;
                border: solid #FFFFFF;
                border-width: 0 3px 3px 0;
                opacity: 0;
                transform: rotate(45deg);
                transition: opacity 0.2s;
            }

            .custom-checkbox input[type="checkbox"]:checked + span:after {
                opacity: 1;
            }

            .custom-checkbox span:hover::before {
                border-color: #B54885;
                box-shadow: 0 0 0 0.2rem rgba(226, 122, 176, 0.25);
            }
    </style>
}

<div class="container my-5 text-center">
    <h2 class="mb-4" style="font-family: 'Sono', sans-serif;">
        <i class="fas fa-clock me-2"></i> Gestión de Horarios
    </h2>

    <!-- Tabs superiores -->
    <ul class="nav nav-tabs mb-4 justify-content-center">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Empleados", "Empleados")">Empleados</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="#">Horarios</a>
        </li>
    </ul>

    <!-- Formulario -->
    <div class="card mb-4">
        <div class="card-body">
            <form id="horarioForm" class="needs-validation" action="@Url.Action("GuardarHorario", "Horarios")" method="post" novalidate>
                <input type="hidden" name="id_horario" value="0" />

                <div class="row mb-3">
                    <div class="col-md-3 mb-3 text-start">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Empleado</label>
                            <div>
                                @Html.DropDownList("id_usuario", ViewBag.Empleados as List<SelectListItem>, "-- Seleccione --", new { @class = "form-select" })
                                <span class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3 text-start">
                        <label class="form-label fw-bold">Días de la semana</label>
                        <div id="diasSemanaContainer" class="d-flex flex-wrap gap-3">
                            @foreach (var dia in new[] { "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo" })
                            {
                                <label class="custom-checkbox d-flex align-items-center" style="cursor:pointer; gap:8px;">
                                    <input type="checkbox" name="dias_semana" value="@dia" id="check_@dia" />
                                    <span></span>
                                    @dia
                                </label>
                            }
                        </div>
                        <span class="invalid-feedback" id="diasSemanaError"></span>
                    </div>

                    <div class="col-md-3 ms-auto mb-3 text-start">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Hora Entrada</label>
                            <div class="custom-timepicker" data-input="hora_entrada">
                                <div class="timepicker-input">
                                    Seleccionar hora entrada <i class="fas fa-clock clock-icon"></i>
                                </div>
                                <div class="timepicker-selector">
                                    <!-- El contenido se genera dinámicamente -->
                                </div>
                            </div>
                            <div>
                                <input type="text" id="hora_entrada" name="hora_entrada" class="hidden-input">
                                <span class="invalid-feedback"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Hora Salida</label>
                            <div class="custom-timepicker" data-input="hora_salida">
                                <div class="timepicker-input">
                                    Seleccionar hora salida <i class="fas fa-clock clock-icon"></i>
                                </div>
                                <div class="timepicker-selector">
                                    <!-- El contenido se genera dinámicamente -->
                                </div>
                            </div>
                            <div>
                                <input type="text" id="hora_salida" name="hora_salida" class="hidden-input">
                                <span class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="d-flex justify-content-end gap-2">
                    <button type="reset" class="btn btn-danger">Cancelar</button>
                    <button type="submit" class="btn btn-custom-pink">Guardar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla -->
    <div class="table-responsive">
        <table class="table mb-0 table-bordered table-striped tabla-global text-center dataTable" data-page-length="2">
            <thead class="tabla-global">
                <tr>
                    <th>Empleado</th>
                    <th>Día</th>
                    <th>Entrada</th>
                    <th>Salida</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="tabla-global">
                @foreach (var h in Model)
                {
                    <tr>
                        <td>@h.id_usuario</td>
                        <td>@h.dia_semana</td>
                        <td>@h.hora_entrada</td>
                        <td>@h.hora_salida</td>
                        <td>
                            <form method="post" action="@Url.Action("EliminarHorario", "Horarios")" style="display:inline;">
                                <input type="hidden" name="id" value="@h.id_horario" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js" defer></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js" defer></script>
    <script src="@Url.Content("~/Templates/js/paginaciones_y_exportaciones.js")" defer></script>
    <script src="@Url.Content("~/Templates/js/selects.js")" defer></script>
    <script src="@Url.Content("~/Templates/js/validaciones.js")"></script>
    <script src="@Url.Content("~/Templates/js/empleados.js")" defer></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const checkboxes = document.querySelectorAll('.custom-checkbox input[type="checkbox"]');
            checkboxes.forEach(function (checkbox) {
                checkbox.addEventListener('change', function () {
                });
            });
        });
    </script>
}